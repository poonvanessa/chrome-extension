{
  "name": "Getting Started Example",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": ["activeTab", "declarativeContent", "storage", "cookies", "<all_urls>"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/brown16.png",
      "32": "images/brown32.png",
      "48": "images/brown48.png",
      "128": "images/brown128.png"
    }
  },
  "icons": {
    "16": "images/brown16.png",
    "32": "images/brown32.png",
    "48": "images/brown48.png",
    "128": "images/brown128.png"
  },
  "manifest_version": 2
}